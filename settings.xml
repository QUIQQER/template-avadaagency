                                <description>
                                    <locale group="quiqqer/template-avadaagency"
                                            var="settings.bgColorSwitcherSuffix.description"
                                    />
                                </description>

                                <option value="hide">
                                    <locale group="quiqqer/template-avadaagency"
                                            var="settings.bgColorSwitcher.hide"
                                    />
                                </option>
                                <option value="display">
                                    <locale group="quiqqer/template-avadaagency"
                                            var="settings.bgColorSwitcher.display"
                                    />
                                </option>
                            </select>

                        </settings>


                        <!-- header settings -->
                        <settings title="templateAvadaAgency.settings"
                                  name="templateAvadaAgency.header.settings">
                            <title>
                                <locale group="quiqqer/template-avadaagency"
                                        var="header.settings.title"
                                        />
                            </title>

                            <!-- no header? -->
                            <text>
                                <locale group="quiqqer/template-avadaagency"
                                        var="showHeader.text" />
                            </text>
                            <input conf="templateAvadaAgency.settings.showHeaderStartPage"
                                   type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-avadaagency"
                                            var="showHeaderStartPage.text"
                                    />
                                </text>
                            </input>
                            <input conf="templateAvadaAgency.settings.showHeaderNoSidebar"
                                   type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-avadaagency"
                                            var="showHeaderNoSidebar.text"
                                            />
                                </text>
                            </input>
                            <input conf="templateAvadaAgency.settings.showHeaderLeftSidebar"
                                   type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-avadaagency"
                                            var="showHeaderLeftSidebar.text"
                                            />
                                </text>
                            </input>
                            <input conf="templateAvadaAgency.settings.showHeaderRightSidebar"
                                   type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-avadaagency"
                                            var="showHeaderRightSidebar.text"
                                            />
                                </text>
                            </input>

                            <!-- header height and value -->
                            <text>
                                <locale group="quiqqer/template-avadaagency"
                                        var="header.settings.height.text"
                                />
                            </text>
