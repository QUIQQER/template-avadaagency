                                <text>
                                    <locale group="quiqqer/template-avadaagency"
                                            var="header.settings.height.text"
                                    />
                                </text>
                            </input>

                            <select conf="templateAvadaAgency.settings.headerImagePosition">
                                <text>
                                    <locale group="quiqqer/template-avadaagency"
                                            var="settings.headerImagePosition.text"
                                    />
                                </text>

                                <option value="flex-start">
                                    <locale group="quiqqer/template-avadaagency"
                                            var="settings.headerImagePosition.start"
                                    />
                                </option>
                                <option value="center">
                                    <locale group="quiqqer/template-avadaagency"
                                            var="settings.headerImagePosition.center"
                                    />
                                </option>
                                <option value="flex-end">
                                    <locale group="quiqqer/template-avadaagency"
                                            var="settings.headerImagePosition.end"
                                    />
                                </option>
                            </select>
                        </settings>





