            </config>

            <window>
                <categories>
                    <category name="templateAvadaAgency">
                        <text>
                            <locale group="quiqqer/template-avadaagency"
                                    var="settings.menu.title"
                                    />
                        </text>
                        <icon>URL_BIN_DIR/22x22/quiqqer.png</icon>


                        <!-- Background Color Switcher Prefix / Suffix -->
                        <settings title="templateAvadaAgency.settings"
                                  name="templateAvadaAgency.settings.bgColorSwitcher">
                            <title>
                                <locale group="quiqqer/template-avadaagency"
                                        var="settings.bgColorSwitcher.title"
                                        />
                            </title>

                            <!-- Background Color Switcher Prefix -->
                            <select conf="templateAvadaAgency.settings.bgColorSwitcherPrefix">
                                <text>
                                    <locale group="quiqqer/template-avadaagency"
                                            var="settings.bgColorSwitcherPrefix.text"
                                            />
                                </text>

                                <description>
                                    <locale group="quiqqer/template-avadaagency"
                                            var="settings.bgColorSwitcherPrefix.description"
                                            />
                                </description>

                                <option value="hide">
                                    <locale group="quiqqer/template-avadaagency"
                                            var="settings.bgColorSwitcher.hide"
                                            />
                                </option>
                                <option value="display">
                                    <locale group="quiqqer/template-avadaagency"
                                            var="settings.bgColorSwitcher.display"
                                            />
                                </option>
                            </select>

                            <!-- Background Color Switcher Suffix-->
                            <select conf="templateAvadaAgency.settings.bgColorSwitcherSuffix">
                                <text>
                                    <locale group="quiqqer/template-avadaagency"
                                            var="settings.bgColorSwitcherSuffix.text"
